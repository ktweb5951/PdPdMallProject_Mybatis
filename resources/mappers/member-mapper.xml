<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="MemberMapper">
 	<resultMap type="member.model.vo.Member" id="memberResultMap">
 		<id property="memberId" column="MEMBER_ID" />
		<result property="memberPw" column="MEMBER_PW" />
		<result property="memberName" column="MEMBER_NAME" />
		<result property="memberNickname" column="MEMBER_NICKNAME" />
		<result property="memberPhone" column="MEMBER_PHONE" />
		<result property="memberAddress" column="MEMBER_ADDRESS" />
		<result property="postalCodeOne" column="POSTALCODE_ONE" />
		<result property="postalCodeTwo" column="POSTALCODE_TWO" />
		<result property="memberEmail" column="MEMBER_EMAIL" />
		<result property="memberDate" column="MEMBER_DATE" />
 	</resultMap>
 
 	<insert id="insertMember" >
 		INSERT INTO MALLMEMBER VALUES(#{memberId},#{memberPw},#{memberName},#{memberNickname},#{memberPhone},#{memberAddress},#{postalCodeOne},#{postalCodeTwo},#{memberEmail}, DEFAULT)
 	</insert>

 	<update id="updateMember">
 		UPDATE MALLMEMBER SET MEMBER_PW=#{memberPw},MEMBER_PHONE=#{memberPhone }, MEMBER_ADDRESS=#{memberAddress}, MEMBER_POST1=#{postalCodeOne}, MEMBER_POST2=#{postalCodeTwo}, MEMBER_EMAIL=#{memberEmail} WHERE MEMBER_ID=#{memberId}
 	</update>
 	
 	<delete id="deleteMember">
 		DELETE FROM MALLMEMBER WHERE MEMBER_ID = #{memberId}
 	</delete>
 	
 	
 	<select id="selectCheckLogin" resultMap="memberResultMap">
 		SELECT * FROM MALLMEMBER WHERE MEMBER_ID=#{memberId} AND MEMBER_PW=#{memberPw}
 	</select>
 	
 	<select id="selectOneById" resultMap="memberResultMap">
 		SELECT * FROM MALLMEMBER WHERE MEMBER_ID=#{memberId}
 	</select>
 
  </mapper>